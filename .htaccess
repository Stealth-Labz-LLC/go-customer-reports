# URL Rewriting - route content URLs through front controller
# Existing campaign directories (cr/, eb/, ee25/, qr/, sc/, ss/) are served directly
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Skip existing files and directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Skip API requests
    RewriteRule ^api/ - [L]

    # Route everything else through front controller
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

